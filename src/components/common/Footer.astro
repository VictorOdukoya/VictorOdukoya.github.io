---
const currentYear = new Date().getFullYear();

const footerLinks = {
  legal: [
    { href: '/privacy', label: 'Privacy Policy' },
    { href: '/terms', label: 'Terms of Service' },
    { href: '/impressum', label: 'Impressum' },
  ],
  navigation: [
    { href: '/', label: 'Home' },
    { href: '/apps', label: 'Apps' },
    { href: '/support', label: 'Support' },
  ],
};
---

<footer class="relative overflow-hidden">
  <!-- Top gradient line -->
  <div class="h-px bg-gradient-to-r from-transparent via-primary-500/50 to-transparent"></div>

  <!-- Main footer -->
  <div class="bg-gray-100 dark:bg-gray-900/50">
    <div class="container-custom py-16">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-10">
        <!-- Brand -->
        <div class="col-span-2">
          <a href="/" class="flex items-center gap-3 mb-6 group">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center shadow-lg shadow-primary-500/20 group-hover:shadow-primary-500/40 transition-shadow">
              <span class="text-white font-display font-bold text-base tracking-tight">VO</span>
            </div>
            <div>
              <span class="font-display font-semibold text-gray-900 dark:text-white block">Victor Odukoya</span>
              <span class="text-sm text-gray-500 dark:text-gray-400">Software Developer</span>
            </div>
          </a>
          <p class="text-gray-600 dark:text-gray-400 max-w-xs mb-6 leading-relaxed">
            Building apps that make learning enjoyable. One pair at a time.
          </p>
          
          <!-- Social links -->
          <div class="flex items-center gap-3">
            <a
              href="https://github.com/victorOduk"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-xl bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:border-gray-300 dark:hover:border-gray-600 hover:shadow-md transition-all"
              aria-label="GitHub"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
              </svg>
            </a>
            <a
              href="https://linkedin.com/in/victoroduk"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-xl bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:border-gray-300 dark:hover:border-gray-600 hover:shadow-md transition-all"
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a
              href="mailto:contact@victorodukoya.de"
              class="w-10 h-10 rounded-xl bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:border-gray-300 dark:hover:border-gray-600 hover:shadow-md transition-all"
              aria-label="Email"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Navigation -->
        <div>
          <h3 class="font-display font-semibold text-gray-900 dark:text-white mb-4">Navigation</h3>
          <ul class="space-y-3">
            {footerLinks.navigation.map((link) => (
              <li>
                <a href={link.href} class="link-underline text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Legal -->
        <div>
          <h3 class="font-display font-semibold text-gray-900 dark:text-white mb-4">Legal</h3>
          <ul class="space-y-3">
            {footerLinks.legal.map((link) => (
              <li>
                <a href={link.href} class="link-underline text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-gray-200 dark:border-gray-800">
      <div class="container-custom py-6">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
          <p class="text-sm text-gray-500 dark:text-gray-500">
            © {currentYear} Victor Odukoya. All rights reserved.
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-500 flex items-center gap-2">
            Made with 
            <span class="inline-block animate-pulse">❤️</span> 
            and 
            <span class="inline-block">☕</span> 
            in Germany
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>
