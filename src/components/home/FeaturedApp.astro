                      <div class="flex-1">
                        <div class="h-2 bg-white/40 rounded-full w-1/2"></div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Home indicator -->
                <div class="absolute bottom-2 inset-x-0 flex justify-center">
